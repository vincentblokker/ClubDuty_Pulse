{
  "name": "@clubduty/pulse-root",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "concurrently -n web,api -c green,blue \"yarn workspace @clubduty/pulse-web dev\" \"yarn workspace @clubduty/pulse-api dev\"",
    "dev:web": "yarn workspace @clubduty/pulse-web dev",
    "dev:api": "yarn workspace @clubduty/pulse-api dev",
    "build": "yarn workspaces foreach -At run build",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write .",
    "ci": "yarn lint"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "concurrently": "^9.0.1",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "prettier": "^3.3.3"
  }
}
